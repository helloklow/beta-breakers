<center>
<h1> <%= @roote.name.split.map(&:capitalize).join(' ') %> </h1>

<h4> <%= @roote.category %> at <%= @roote.location.split.map(&:capitalize).join(' ') %> (<%= @roote.difficulty.upcase %>) </h4><br>

<p> <%= @roote.content %> </p><br>

<h5> Comments: </h5>
<%= @roote.comments.each do |c| %>
    <b><%= c.user.username.capitalize %> says:</b> <%= c.content %> <em>(<%= c.rating %>/5 stars)</em><br>
<% end %><br><br>

<%= button_to 'Add Comment', new_roote_comment_path(@roote), method: :get %><br>

<%= link_to 'Home', user_path(@user) %>
</center>