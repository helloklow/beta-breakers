<div class="styled">
<center>
<div id="rootes">
<h1> <%= @roote.name.split.map(&:capitalize).join(' ') %> </h1>

<h4><b> <%= @roote.category %> (<%= @roote.difficulty.upcase %>) </b></h4>
<h5><b> <%= @roote.location.split.map(&:capitalize).join(' ') %> </b></h5><br>

<p> <%= @roote.content %> </p><br>
</div>

<div id="comments">
<h5><b> Comments: </b></h5>
<% @roote.comments.all.each do |c| %>
    <b> <%= c.user.username.split[0].capitalize %> says: </b> <%= c.content %>
    <small> <%= link_to 'Delete', roote_comment_path(c), method: :delete %> </small><br>
    <span class="rating"> <%= c.rating %>/5 stars </span>
    <span class="date"> <%= time_ago_in_words(c.created_at) %> ago </span><br>
    <br>
<% end %><br>
</div>

<%= link_to 'View Comments', roote_comments_path(@roote) %><br>
<%= button_to 'Add Comment', new_roote_comment_path(@roote), method: :get %><br><br>

<%= render partial: "layouts/footer" %><br><br>
</center>
</div>