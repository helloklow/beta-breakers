<div class="styled">
<center>
<h1> Create an Account </h1><br>

<%= form_for @user, url: signup_path do |f| %>
    <%= render partial: 'layouts/errors', locals: {obj: @user} %>
    
    <%= f.email_field :email, class: "form-text", autofocus: true, placeholder: "Email" %><br>

    <%= f.text_field :username, class: "form-text", placeholder: "Username" %><br>

    <%= f.password_field :password, class: "form-text", placeholder: "Password" %><br>

    <%= f.submit 'Sign Up', class: "form-btn" %>
<% end %><br><br>

<%= link_to 'Sign Up via Facebook', '/auth/facebook', class: "nav-btn" %><br>
<%= link_to 'Login', '/login', class: "nav-btn" %><br>
<%= link_to 'Home', '/', class: "nav-btn" %>
<br><br><br>
</center>
</div>
