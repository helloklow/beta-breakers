<div class="styled">
<center>
<br>
<%= link_to root_path do %>
    <%= image_tag "beta-breakers.png", alt: "Beta Breakers", width: "250", class: "logo" %>
 <% end %>
 <br><br><br><br>

<%= form_for @user, url: signup_path do |f| %>
    <%= render partial: 'layouts/errors', locals: {obj: @user} %>
    
    <%= f.email_field :email, autofocus: true, placeholder: "Email" %><br>

    <%= f.text_field :username, placeholder: "Username" %><br>

    <%= f.password_field :password, placeholder: "Password" %><br>

    <%= f.submit 'Sign Up' %>
<% end %><br><br>

<%= link_to 'Sign Up via Facebook', '/auth/facebook' %><br>
<%= link_to 'Login', '/login' %>
<br><br><br><br>
</center>
</div>
