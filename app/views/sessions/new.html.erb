<div class="styled">
<center>
<br>
<%= link_to root_path do %>
    <%= image_tag "beta-breakers.png", alt: "Beta Breakers", width: "250", class: "logo" %>
 <% end %>
 <br><br><br><br>

<%= flash[:error] %>

<%= form_for @user, url: login_path do |f| %>
    <%= f.text_field :email, autofocus: true, placeholder: "Email" %><br>

    <%= f.password_field :password, placeholder: "Password" %><br>

    <%= f.submit 'Login' %>
<% end %><br><br>

<%= link_to 'Login via Facebook', '/auth/facebook' %><br>
<%= link_to 'Sign Up', '/signup' %>
<br><br><br><br>
</center>
</div>